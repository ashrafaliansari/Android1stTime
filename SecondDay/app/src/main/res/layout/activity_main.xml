<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashraf.secondday.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="Activity A"
        android:layout_centerInParent="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="22dp"
        android:text="Click Me!!!" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/imgview"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cam"
        android:text="Launch Camera"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gal"
        android:text="Gallery"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cam"
        android:layout_alignLeft="@+id/cam"
        android:layout_alignStart="@+id/cam"
        android:layout_alignRight="@+id/cam"
        android:layout_alignEnd="@+id/cam" />
</RelativeLayout>
